<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="390dp"
    android:layout_height="511dp"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="-8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.manish.translinkapp.MainActivity">

        <Button
            android:id="@+id/next_bus_btn"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:text="@string/next_bus_prompt"
            android:onClick="handleUserChoice"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/plan_trip_btn"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/plan_trip_btn"
            android:layout_width="178dp"
            android:layout_height="48dp"
            android:text="@string/plan_trip_prompt"
            android:onClick="handleUserChoice"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf = "@+id/next_bus_btn"
            app:layout_constraintBottom_toTopOf="@+id/button3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.479"
            android:layout_marginStart="8dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="182dp"
            android:layout_height="50dp"
            android:text="Button"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/plan_trip_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.226"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

    </android.support.constraint.ConstraintLayout>
</RelativeLayout>
